{% extends 'base.twig' %}

{% block mainHeader %}
  {% set sticky = 'uk-sticky' %}
  {% include 'parts/navigation-simple.twig'  %}
{% endblock mainHeader %}

{% block content %}
  <article id='singles-video'>
    <header class='uk-width-1-1'>
      <div class='uk-container'>
        <div class='uk-background-default uk-padding-small'>
          <ol
            class='uk-padding-remove breadcrumb'
            itemscope 
            itemtype='https://schema.org/BreadcrumbList'>
            <li 
              class='uk-display-inline-block uk-text-capitalize' itemprop='itemListElement' 
              itemscope 
              itemtype='https://schema.org/ListItem'>
              <a
                itemscope
                itemprop='item'
                itemscope='https://schema.org/Thing' 
                href="{{site.url}}/tag/videos"
                class='uk-link-muted uk-text-bold'>
                Videos
              </a>
            </li>
            <li 
              class='uk-display-inline-block uk-text-capitalize' itemprop='itemListElement' 
              itemscope 
              itemtype='https://schema.org/ListItem'>
              <a
                itemscope
                itemprop='item'
                itemscope='https://schema.org/Thing' 
                href="{{categories[0].link}}"
                class='uk-link-muted uk-text-bold'>
                {{categories[0].name}}
              </a>
            </li>
            <li
              class='uk-display-inline-block uk-text-capitalize uk-text-italic'
              itemprop='itemListElement' 
              itemscope 
              itemtype='https://schema.org/ListItem'
            >
              <span
                itemscope
                itemprop='item'
                itemscope='https://schema.org/Thing'>
              {{post.title}}
              </span>
            </li>
          </ol>
          <h1 class='uk-margin-remove title'>{{post.title}}</h1>
          <div class='meta'>
            <ul class='uk-padding-remove uk-margin-remove uk-text-meta'>
              <li>
                By <a href='{{post.author.link}}' class='uk-padding-remove'>{{post.author.name}}</a>
              </li>
              <li>Posted on {{ post.date|date('F jS Y') }}</li>
            </ul>
          </div>
        </div>
      </div>
    </header>
    <section class='uk-width-1-1'>
      <div class='uk-container'>
        <div 
          class='uk-position-relative uk-width-1-1' 
          uk-height-viewport='offset-bottom: 20;'>
          <div 
            class='
              video-container
              uk-position-absolute
              uk-width-1-1
              uk-height-1-1
              uk-display-flex
              uk-flex-column
              uk-flex-center
              uk-flex-middle
          '>
            <iframe
              width='100%'
              height='100%'
              src="https://www.youtube.com/embed/{{post.youtube_id}}"
              frameborder="0"
              allow="autoplay; encrypted-media"
              allowfullscreen></iframe>
          </div>
        </div>
      </div>
    </section>
    <section class='uk-width-1-1'>
      <div class='uk-container'>
        <div class='uk-background-default uk-padding-small'>
          <div class='uk-display-block'>
            <p class='uk-margin-remove uk-text-lead'>{{excerpt}}</p>
          </div>
          <div class='uk-display-block'>
            {{post.content}}
          </div>
          <div class='uk-display-block'>
            {% include 'parts/facebook-comments.twig' %}
          </div>
        </div>
      </div>
    </section>
  </article>
{% endblock content %}
