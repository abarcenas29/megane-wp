{% extends 'base.twig' %}

{% block mainHeader %}
  {% set sticky = 'uk-sticky'  %}
  {% include 'parts/navigation-simple.twig' %}
{% endblock mainHeader %}

{% block content %}
  <div class='uk-child-width-1-1 uk-grid-collapse' uk-grid>
    <div>
      <div class='uk-container'>

        <div class='uk-background-default uk-padding-small'>
          <div class='uk-child-width-1-1' uk-grid>

            <div>
              <h1 class='
                uk-text-uppercase
                uk-text-bold
                uk-heading-divider
                '>
                Posts about
                {{ function('single_cat_title')  }}
              </h1>
            </div>

            <div>

              <div uk-grid>
                <div class='uk-width-2-3@m uk-width-1-1@s'>

                  <div class='
                    uk-child-width-1-2@m
                    uk-child-width-1-1@s'
                    uk-grid>
                    {% if posts %}
                      {% for post in posts %}
                        <a
                          href='{{post.link}}'
                          class='uk-display-block'
                          title='{{post.title}}'
                        >
                          <div class='uk-card uk-card-small uk-card-default'>
                            <div class='uk-card-media-top'>
                              <div class='uk-inline uk-width-1-1'>
                                <img
                                  src='{{post.thumbnail.src('thumbnail')}}' class='uk-width-1-1'
                                />
                                <div class='
                                  uk-overlay
                                  uk-overlay-primary
                                  uk-position-bottom
                                  uk-padding-small'>
                                  {{ post.title | truncate(10)  }}
                                </div>
                              </div>
                            </div>
                            <div class='
                              uk-card-body
                              uk-padding-small'
                              style='padding: 15px;'>
                              {{ function('get_the_excerpt', post.ID) | truncate(10) }}
                            </div>
                          </div>
                        </a>
                      {% endfor %}
                    {% endif %}
                  </div>

                </div>
                <div class='uk-width-1-3@m uk-width-1-1@s'>
                  {% include 'parts/aside.twig' %}
                </div>
              </div>

            </div>

          </div>
        </div>

      </div>
    </div>
  </div>
{% endblock content %}
