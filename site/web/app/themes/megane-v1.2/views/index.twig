{% extends 'base.twig' %}

{% block mainHeader %}
  {% include 'parts/navigation-simple.twig' %}
{% endblock mainHeader %}

{% block content %}
  <div class='uk-child-width-1-1 uk-grid-collapse' uk-grid>
    <div>
      <div class='uk-container'>

        <div class='uk-background-default uk-padding-small'>
          <div class='uk-child-width-1-1' uk-grid>

            <div>
              <h1 class='
                uk-text-uppercase
                uk-text-bold
                uk-heading-divider
                '>
                Category/Tag Name
              </h1>
            </div>

            <div>

              <div uk-grid>
                <div class='uk-width-2-3@m uk-width-1-1@s'>

                  <div class='
                    uk-child-width-1-2@m
                    uk-child-width-1-1@s'
                    uk-grid>
                    {% for i in 1..10 %}
                      <a href='#' class='uk-display-block'>
                        <div class='uk-card uk-card-small uk-card-default'>
                          <div class='uk-card-media-top'>
                            <div class='uk-inline uk-width-1-1'>
                              <img
                                src='http://loremflickr.com/320/320' class='uk-width-1-1'
                              />
                              <div class='
                                uk-overlay
                                uk-overlay-primary
                                uk-position-bottom
                                uk-padding-small'>
                                AAA
                              </div>
                            </div>
                          </div>
                          <div class='
                            uk-card-body
                            uk-padding-small'
                            style='padding: 15px;'>
                            AAA
                          </div>
                        </div>
                      </a>
                    {% endfor %}
                  </div>

                </div>
                <div class='uk-width-1-3@m uk-width-1-1@s'>
                  {% include 'parts/aside.twig' %}
                </div>
              </div>

            </div>

          </div>
        </div>

      </div>
    </div>
  </div>
{% endblock content %}
