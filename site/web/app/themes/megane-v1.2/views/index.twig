{% extends 'base.twig' %}

{% block mainHeader %}
  {% set sticky = 'uk-sticky'  %}
  {% include 'parts/navigation-simple.twig' %}
{% endblock mainHeader %}

{% block content %}
  <div class='uk-child-width-1-1 uk-grid-collapse' uk-grid id='{{page}}'>
    <div>
      <div class='uk-container'>

        <div class='uk-background-default uk-padding-small'>
          <div class='uk-child-width-1-1' uk-grid>

            <div>
              <h1 class='
                uk-text-uppercase
                uk-text-bold
                uk-heading-divider
                '>
                Posts about
                {{title}}
              </h1>
            </div>

            <div>

              <div uk-grid>
                <div class='uk-width-2-3@m uk-width-1-1@s'>
                  <ul class='
                    index-loop
                    uk-width-1-1
                    uk-padding-remove
                    uk-margin-remove'>
                    {% if posts  %}
                    {% for post in posts  %}
                    <li class='uk-display-inline-block uk-padding-small'>
                      <a class='
                        post-item
                        uk-box-shadow-medium
                        uk-flex
                        uk-flex-column
                        uk-height-1-1
                        uk-link-muted
                      '>
                        <div class='
                          uk-display-block
                          uk-position-relative
                          feature'>
                          {% if post.is_video %}
                            <div class='
                              uk-position-absolute
                              uk-flex
                              uk-flex-center
                              uk-flex-middle
                              play-button
                              uk-width-1-1
                              uk-height-1-1'>
                              <div>
                                <span uk-icon='icon: play-circle; ratio: 5'></span>
                              </div>
                            </div>
                          {% endif %}
                          <img
                            src='{{post.thumbnail.src('thumbnail')}}' class='uk-width-1-1'
                          />
                        </div>
                        <div class='uk-padding-small body'>
                          <h3>
                            {{post.title}}
                          </h3>
                          <p>{{ function('get_the_excerpt', post.ID)  }}</p>
                        </div>
                      </a>
                    </li>
                    {% endfor %}
                    {% endif %}
                  </ul>
                </div>
                <div class='uk-width-1-3@m uk-width-1-1@s'>
                  {% include 'parts/aside.twig' %}
                </div>
              </div>

            </div>

          </div>
        </div>

      </div>
    </div>
  </div>
{% endblock content %}
