<div class="headline--ratio uk-visible@m">
  <div class='
      content
      uk-background-cover
      uk-flex
      uk-flex-wrap
      uk-height-1-1
    '
    style='background-image:url("{{headline.thumbnail.src('medium')}}")'>
      <div class='
        uk-width-1-2
        uk-visible@l
        headline__space
        headline__space--empty'></div>
      <div class='
        uk-width-1-2
        uk-visible@l
        headline__space
        headline__space--title'>
        <div class='
          uk-padding-small
          uk-text-uppercase
          headline__container--desktop'>
          <div class='
            uk-overlay
            uk-overlay-primary
            headline__container__container'>
            <h2 class='
              uk-text-uppercase
              headline_title'>
              {{headline.title}}
            </h2>
          </div>
        </div>
      </div>
      <div class='
        uk-flex
        uk-flex-bottom
        uk-width-1-1
        headline__space
      '>
        <div class='
          uk-padding-small
          uk-width-1-1@m
          uk-width-1-2@l
          uk-width-1-3@xl
          headline__container
        '>
          <div class='
            uk-overlay
            uk-overlay-primary
            headline__container__container'>
            <h2 class='
              uk-text-uppercase
              headline__title
              uk-hidden@l'>
              {{headline.title}}
            </h2>
            <p class='
              headline__excerpt
              uk-margin-remove'>
              {{function('get_the_excerpt', headline.ID)}}
            </p>
          </div>
        </div>
      </div>
    </div>
</div>
